<!DOCTYPE html>
<html>
<head>
  <title>Forget-Me-Not</title>
  <%= stylesheet_link_tag    'application', 'bootstrap.min', 'round-about', 'bootstrap.icon-large.min', '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'jquery', 'bootstrap.min.js', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

   <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Forget-Me-Not</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav pull-right">
                    <li>
                        <a href="#">Help</a>
                    </li>
                    <li>
                        <a href="#" data-toggle="modal" data-target="#settingsModal">
                            <i class="fa fa-gear fa-1x"></i> Settings
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <div class="container">
      <%= yield %>
    </div>

    <footer class="container">
        <hr />
        <p class="small text-muted">Copyright &copy; 2015 Forget-Me-Not</p>
    </footer>

    <!-- Settings Modal -->
    <div class="modal fade" id="settingsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header text-center">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 id="myModalLabel">
                <i class="fa fa-gear"></i>
                Settings
            </h1>
            <button type="button" class="btn btn-default">Check for updates</button>
            <br /><br />
            <button type="button" class="btn btn-default">Connect to Mobile Device</button>
            <br />
            <br />
            <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
</body>
</html>
